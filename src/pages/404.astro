---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout
  title="404 - Page Not Found | Agnosphere"
  description="The page you're looking for doesn't exist."
  noindex={true}
>
  <section class="py-20 min-h-screen flex items-center bg-gradient-to-br from-gray-50 via-white to-blue-50">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-2xl mx-auto text-center">
        <!-- 404 Illustration -->
        <div class="mb-8">
          <h1 class="text-9xl font-bold bg-gradient-to-r from-blue-600 to-indigo-600 bg-clip-text text-transparent">
            404
          </h1>
        </div>

        <h2 class="text-4xl font-bold text-gray-900 mb-6">
          Seite nicht gefunden
        </h2>
        
        <p class="text-xl text-gray-600 mb-8">
          Diese Seite existiert nicht oder wurde verschoben.
        </p>

        <div class="flex justify-center">
          <a
            href="/"
            class="inline-flex items-center justify-center px-12 py-4 text-lg font-semibold btn-primary hover-lift glow-on-hover rounded-full"
          >
            Zur√ºck zur Startseite
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

