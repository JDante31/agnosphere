<script>
  // Reveal on scroll animation
  const observerOptions = {
    threshold: 0.1,
    rootMargin: '0px 0px -50px 0px'
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.classList.add('active');
      }
    });
  }, observerOptions);

  // Observe all reveal elements
  document.querySelectorAll('.reveal').forEach(el => observer.observe(el));

  // Mouse tracking for bento cards (spotlight effect)
  document.querySelectorAll('[data-bento-card]').forEach(card => {
    card.addEventListener('mousemove', (e: Event) => {
      const mouseEvent = e as MouseEvent;
      const rect = card.getBoundingClientRect();
      const x = ((mouseEvent.clientX - rect.left) / rect.width) * 100;
      const y = ((mouseEvent.clientY - rect.top) / rect.height) * 100;
      (card as HTMLElement).style.setProperty('--mouse-x', `${x}%`);
      (card as HTMLElement).style.setProperty('--mouse-y', `${y}%`);
    });
  });

  // Flip card functionality
  document.querySelectorAll('.flip-card').forEach(card => {
    card.addEventListener('click', () => {
      card.classList.toggle('flipped');
    });
  });


  // Founder modal functionality
  const modal = document.getElementById('founder-modal');
  const closeBtn = document.getElementById('close-modal');
  const ursContent = document.getElementById('urs-content');
  const jakobContent = document.getElementById('jakob-content');

  document.querySelectorAll('.founder-badge').forEach(badge => {
    badge.addEventListener('click', (e) => {
      const founder = (e.currentTarget as HTMLElement).dataset.founder;
      
      // Hide all content
      document.querySelectorAll('.founder-content').forEach(content => {
        content.classList.add('hidden');
      });
      
      // Show selected founder content
      if (founder === 'urs') {
        ursContent?.classList.remove('hidden');
      } else if (founder === 'jakob') {
        jakobContent?.classList.remove('hidden');
      }
      
      // Show modal
      modal?.classList.remove('hidden');
      modal?.classList.add('flex');
      document.body.style.overflow = 'hidden';
    });
  });

  // Close modal
  closeBtn?.addEventListener('click', () => {
    modal?.classList.add('hidden');
    modal?.classList.remove('flex');
    document.body.style.overflow = 'auto';
  });

  // Close on backdrop click
  modal?.addEventListener('click', (e) => {
    if (e.target === modal) {
      modal.classList.add('hidden');
      modal.classList.remove('flex');
      document.body.style.overflow = 'auto';
    }
  });

  // Close on ESC key
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && modal && !modal.classList.contains('hidden')) {
      modal.classList.add('hidden');
      modal.classList.remove('flex');
      document.body.style.overflow = 'auto';
    }
  });

  // Dynamic Navbar Visibility - Hide entire navbar on hero section
  const heroLogo = document.getElementById('hero-logo');
  const mainHeader = document.getElementById('main-header');

  if (heroLogo && mainHeader) {
    // Set initial state: hide navbar on page load
    mainHeader.style.transform = 'translateY(-100%)';
    mainHeader.style.opacity = '0';
    
    const headerObserver = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          // Hero logo is visible -> Hide navbar
          mainHeader.style.transform = 'translateY(-100%)';
          mainHeader.style.opacity = '0';
        } else {
          // Hero logo is hidden -> Show navbar
          mainHeader.style.transform = 'translateY(0)';
          mainHeader.style.opacity = '1';
        }
      });
    }, {
      threshold: 0.1
    });

    headerObserver.observe(heroLogo);
  }
</script>

