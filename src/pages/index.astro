                  <p class="text-base md:text-lg text-gray-600 leading-relaxed">
                    {service.description}
                  </p>
                </div>
              </div>

              <!-- Back -->
              <div class="flip-card-back p-5 md:p-6 rounded-2xl text-white border-2" style="background: linear-gradient(to bottom right, rgb(var(--color-secondary)), rgb(var(--color-secondary) / 0.8)); border-color: rgb(var(--color-secondary));">
                <div class="h-full flex items-center justify-center px-2 md:px-0">
                  <p class="text-base md:text-lg text-white/95 leading-relaxed md:text-center">
                    {service.backInfo}
