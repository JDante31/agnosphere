---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import CustomCursor from '../components/CustomCursor';

export interface Props {
  title: string;
  description: string;
  canonical?: string;
  ogImage?: string;
  noindex?: boolean;
  jsonLd?: any;
}

const {
  title,
  description,
  canonical,
  ogImage = '/og-image.png',
  noindex = false,
  jsonLd,
} = Astro.props;

const site = Astro.site?.toString() || 'https://agnosphere.com';
const currentUrl = canonical || new URL(Astro.url.pathname, site).toString();
const fullOgImage = new URL(ogImage, site).toString();

// Default JSON-LD for Organization
const defaultJsonLd = {
  '@context': 'https://schema.org',
  '@type': 'ProfessionalService',
  name: 'Agnosphere GmbH',
  url: site,
  logo: `${site}/images/logo.png`,
  description: 'Tech-agnostic execution partner for Private Equity portfolios. We bridge the execution gap between strategy and code, turning legacy infrastructure into scalable assets.',
  address: {
    '@type': 'PostalAddress',
    addressLocality: 'Munich',
    addressCountry: 'DE',
  },
  contactPoint: {
    '@type': 'ContactPoint',
    contactType: 'Sales',
    email: 'hello@agnosphere.com',
    availableLanguage: ['English', 'German'],
  },
  founder: [
    {
      '@type': 'Person',
      name: 'Urs Steurer',
      jobTitle: 'Managing Director & Business Lead',
    },
    {
      '@type': 'Person',
      name: 'Jakob Schlegel',
      jobTitle: 'Tech Lead & Principal Architect',
    },
  ],
  areaServed: ['Europe', 'North America'],
  keywords: 'Private Equity, Technical Due Diligence, PMI, Post-Merger Integration, AI Implementation, Data Mobilization, Tech-Agnostic, EBITDA Growth',
};
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/favicon_io/favicon.ico" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon_io/favicon-16x16.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon_io/favicon-32x32.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/favicon_io/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="192x192" href="/favicon_io/android-chrome-192x192.png" />
    <link rel="icon" type="image/png" sizes="512x512" href="/favicon_io/android-chrome-512x512.png" />
    <link rel="manifest" href="/favicon_io/site.webmanifest" />
    
    <meta name="generator" content={Astro.generator} />
    
    <!-- SEO Meta Tags -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="keywords" content="Private Equity, Tech Execution, Technical Due Diligence, Post-Merger Integration, PMI, AI Implementation, Data Mobilization, OpEx Reduction, Tech-Agnostic, Portfolio Companies, EBITDA Growth, Digital Transformation" />
    <meta name="author" content="Agnosphere GmbH" />
    <link rel="canonical" href={currentUrl} />
    {noindex && <meta name="robots" content="noindex, nofollow" />}
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={currentUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={fullOgImage} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:site_name" content="Agnosphere" />
    <meta property="og:locale" content="en_US" />
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={currentUrl} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={fullOgImage} />
    
    <!-- Preconnect for performance -->
    <link rel="dns-prefetch" href="https://cal.com" />
    
    <!-- JSON-LD Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify(jsonLd || defaultJsonLd)} />
  </head>
  <body class="antialiased">
    <CustomCursor client:load />
    <Header />
    <main class="pt-20">
      <slot />
    </main>
    <Footer />
    
    <!-- Cal.com Embed Script -->
    <script type="text/javascript" is:inline>
      (function (C, A, L) { 
        let p = function (a, ar) { a.q.push(ar); }; 
        let d = C.document; 
        C.Cal = C.Cal || function () { 
          let cal = C.Cal; 
          let ar = arguments; 
          if (!cal.loaded) { 
            cal.ns = {}; 
            cal.q = cal.q || []; 
            d.head.appendChild(d.createElement("script")).src = A; 
            cal.loaded = true; 
          } 
          if (ar[0] === L) { 
            const api = function () { p(api, arguments); }; 
            const namespace = ar[1]; 
            api.q = api.q || []; 
            typeof namespace === "string" ? (cal.ns[namespace] = api) && p(api, ar) : p(cal, ar); 
            return; 
          } 
          p(cal, ar); 
        }; 
      })(window, "https://app.cal.com/embed/embed.js", "init");
      
      Cal("init", {origin:"https://cal.com"});
      
      // Global UI config
      Cal("ui", {
        "hideEventTypeDetails":false,
        "layout":"month_view"
      });
    </script>
  </body>
</html>

