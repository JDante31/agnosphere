---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import CustomCursor from '../components/CustomCursor';

export interface Props {
  title: string;
  description: string;
  canonical?: string;
  ogImage?: string;
  noindex?: boolean;
  jsonLd?: any;
}

const {
  title,
  description,
  canonical,
  ogImage = '/og-image.png',
  noindex = false,
  jsonLd,
} = Astro.props;

const site = Astro.site?.toString() || 'https://agnosphere.com';
const currentUrl = canonical || new URL(Astro.url.pathname, site).toString();
const fullOgImage = new URL(ogImage, site).toString();

// Default JSON-LD for Organization
const defaultJsonLd = {
  '@context': 'https://schema.org',
  '@type': 'ProfessionalService',
  name: 'Agnosphere GmbH',
  url: site,
  logo: `${site}/images/logo.png`,
  description: 'Tech-agnostic execution partner for Private Equity portfolios. We bridge the execution gap between strategy and code, turning legacy infrastructure into scalable assets.',
  address: {
    '@type': 'PostalAddress',
    addressLocality: 'Munich',
    addressCountry: 'DE',
  },
  contactPoint: {
    '@type': 'ContactPoint',
    contactType: 'Sales',
    email: 'hello@agnosphere.com',
    availableLanguage: ['English', 'German'],
  },
  founder: [
    {
      '@type': 'Person',
      name: 'Urs Steurer',
      jobTitle: 'Managing Director & Business Lead',
    },
    {
      '@type': 'Person',
      name: 'Jakob Schlegel',
      jobTitle: 'Tech Lead & Principal Architect',
    },
  ],
  areaServed: ['Europe', 'North America'],
  keywords: 'Private Equity, Technical Due Diligence, PMI, Post-Merger Integration, AI Implementation, Data Mobilization, Tech-Agnostic, EBITDA Growth',
};
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/favicon_io/favicon.ico" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon_io/favicon-16x16.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon_io/favicon-32x32.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/favicon_io/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="192x192" href="/favicon_io/android-chrome-192x192.png" />
    <link rel="icon" type="image/png" sizes="512x512" href="/favicon_io/android-chrome-512x512.png" />
    <link rel="manifest" href="/favicon_io/site.webmanifest" />
    
    <meta name="generator" content={Astro.generator} />
    
    <!-- SEO Meta Tags -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="keywords" content="Private Equity, Tech Execution, Technical Due Diligence, Post-Merger Integration, PMI, AI Implementation, Data Mobilization, OpEx Reduction, Tech-Agnostic, Portfolio Companies, EBITDA Growth, Digital Transformation" />
    <meta name="author" content="Agnosphere GmbH" />
    <link rel="canonical" href={currentUrl} />
    {noindex && <meta name="robots" content="noindex, nofollow" />}
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={currentUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={fullOgImage} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:site_name" content="Agnosphere" />
    <meta property="og:locale" content="en_US" />
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={currentUrl} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={fullOgImage} />
    
    <!-- Preconnect for performance -->
    <link rel="dns-prefetch" href="https://cal.com" />
    
    <!-- JSON-LD Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify(jsonLd || defaultJsonLd)} />
    
    <!-- Google Analytics (loads after consent) -->
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      
      // Check if user has consented
      if (localStorage.getItem('cookie-consent') === 'accepted') {
        // Load GA script
        var script = document.createElement('script');
        script.async = true;
        script.src = 'https://www.googletagmanager.com/gtag/js?id=G-CK135X4VPF';
        document.head.appendChild(script);
        
        gtag('js', new Date());
        gtag('config', 'G-CK135X4VPF', {
          'anonymize_ip': true,
          'cookie_flags': 'SameSite=None;Secure'
        });
      }
    </script>
  </head>
  <body class="antialiased">
    <CustomCursor client:load />
    <Header />
    
    <!-- Cookie Consent Banner - GDPR Compliant -->
    <div id="cookie-banner" class="fixed bottom-0 left-0 right-0 glass backdrop-blur-xl border-t border-gray-200 shadow-2xl z-50 hidden animate-slide-up">
      <div class="container mx-auto px-4 sm:px-6 py-5 max-w-5xl">
        <div class="flex flex-col md:flex-row items-start md:items-center gap-4 md:gap-6">
          <!-- Icon -->
          <div class="flex-shrink-0 hidden md:block">
            <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
            </svg>
          </div>
          
          <!-- Content -->
          <div class="flex-1">
            <p class="text-sm text-gray-700 leading-relaxed">
              We use <strong>cookies and Google Analytics</strong> to improve your experience and analyze site traffic. 
              Your data is anonymized and handled according to GDPR standards. 
              <a href="/privacy" class="text-gray-900 hover:text-[#7af28c] underline underline-offset-2 font-medium transition-colors">Privacy Policy</a>
            </p>
          </div>
          
          <!-- Actions -->
          <div class="flex gap-3 flex-shrink-0 w-full md:w-auto">
            <button id="cookie-decline" class="flex-1 md:flex-initial px-5 py-2.5 text-sm font-medium text-gray-700 hover:text-gray-900 border-2 border-gray-200 rounded-full hover:border-gray-300 hover:bg-gray-50 transition-all duration-200">
              Decline
            </button>
            <button id="cookie-accept" class="flex-1 md:flex-initial px-6 py-2.5 text-sm font-medium text-white bg-gray-900 rounded-full hover:bg-gray-800 transition-all duration-200 shadow-sm hover:shadow-md">
              Accept All
            </button>
          </div>
        </div>
      </div>
    </div>
    
    <main class="pt-16 md:pt-20">
      <slot />
    </main>
    <Footer />
    
    <!-- Cal.com Embed Script -->
    <script type="text/javascript" is:inline>
      (function (C, A, L) { 
        let p = function (a, ar) { a.q.push(ar); }; 
        let d = C.document; 
        C.Cal = C.Cal || function () { 
          let cal = C.Cal; 
          let ar = arguments; 
          if (!cal.loaded) { 
            cal.ns = {}; 
            cal.q = cal.q || []; 
            d.head.appendChild(d.createElement("script")).src = A; 
            cal.loaded = true; 
          } 
          if (ar[0] === L) { 
            const api = function () { p(api, arguments); }; 
            const namespace = ar[1]; 
            api.q = api.q || []; 
            typeof namespace === "string" ? (cal.ns[namespace] = api) && p(api, ar) : p(cal, ar); 
            return; 
          } 
          p(cal, ar); 
        }; 
      })(window, "https://app.cal.com/embed/embed.js", "init");
      
      Cal("init", {origin:"https://cal.com"});
      
      // Global UI config
      Cal("ui", {
        "hideEventTypeDetails":false,
        "layout":"month_view"
      });
    </script>
    
    <!-- Cookie Consent Logic -->
    <script is:inline>
      // Show banner if no consent decision made
      if (!localStorage.getItem('cookie-consent')) {
        document.getElementById('cookie-banner').classList.remove('hidden');
      }
      
      // Accept cookies
      document.getElementById('cookie-accept')?.addEventListener('click', function() {
        localStorage.setItem('cookie-consent', 'accepted');
        document.getElementById('cookie-banner').classList.add('hidden');
        // Reload to load GA
        window.location.reload();
      });
      
      // Decline cookies
      document.getElementById('cookie-decline')?.addEventListener('click', function() {
        localStorage.setItem('cookie-consent', 'declined');
        document.getElementById('cookie-banner').classList.add('hidden');
      });
    </script>
    
    <style>
      /* Cookie banner animation */
      @keyframes slide-up {
        from {
          transform: translateY(100%);
          opacity: 0;
        }
        to {
          transform: translateY(0);
          opacity: 1;
        }
      }

      .animate-slide-up {
        animation: slide-up 0.4s cubic-bezier(0.16, 1, 0.3, 1);
      }
    </style>
  </body>
</html>

