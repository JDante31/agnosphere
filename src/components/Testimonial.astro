---
// Simple Astro component for testimonials
export interface Props {
  quote: string;
  author: string;
  role: string;
  company: string;
  image?: string;
}

const { quote, author, role, company, image } = Astro.props;
---

<div class="bg-white rounded-2xl p-8 shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1">
  <div class="flex items-start mb-6">
    <div class="flex-shrink-0">
      {image ? (
        <img src={image} alt={author} class="w-16 h-16 rounded-full object-cover" />
      ) : (
        <div class="w-16 h-16 rounded-full bg-gradient-to-br from-blue-500 to-indigo-500 flex items-center justify-center text-white text-2xl font-bold">
          {author.charAt(0)}
        </div>
      )}
    </div>
    <div class="ml-4">
      <div class="flex text-yellow-400 mb-2">
        {[...Array(5)].map((_, i) => (
          <svg key={i} class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
          </svg>
        ))}
      </div>
    </div>
  </div>
  
  <blockquote class="text-gray-700 text-lg leading-relaxed mb-6 italic">
    "{quote}"
  </blockquote>
  
  <div class="border-t pt-4">
    <p class="font-semibold text-gray-900">{author}</p>
    <p class="text-sm text-gray-600">{role} at {company}</p>
  </div>
</div>

