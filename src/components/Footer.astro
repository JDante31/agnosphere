---
const currentYear = new Date().getFullYear();

const footerLinks = {
  company: [
    { label: 'About', href: '/about' },
    { label: 'Services', href: '/services' },
    { label: 'Case Studies', href: '/case-studies' },
    { label: 'Insights', href: '/insights' },
  ],
  services: [
    { label: 'AI Strategy', href: '/services/ai-strategy' },
    { label: 'Data Audit', href: '/services/data-audit' },
    { label: 'MLOps Modernization', href: '/services/mlops-modernization' },
    { label: 'AI Assistants', href: '/services/ai-assistants' },
  ],
  legal: [
    { label: 'Imprint', href: '/imprint' },
    { label: 'Privacy Policy', href: '/privacy' },
  ],
};

const socialLinks = [
  { 
    name: 'LinkedIn', 
    href: 'https://linkedin.com/company/agnosphere', // User will update
    icon: 'M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z'
  },
  { 
    name: 'Twitter', 
    href: 'https://twitter.com/agnosphere', // User will update
    icon: 'M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z'
  },
];
---

<footer class="bg-gray-900 text-gray-300">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12 lg:py-16">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-8 lg:gap-12">
      <!-- Brand Column -->
      <div class="lg:col-span-2">
        <a href="/" class="flex items-center space-x-2 group mb-6">
          <div class="w-10 h-10 bg-gradient-to-br from-blue-500 to-indigo-500 rounded-lg flex items-center justify-center transform group-hover:scale-105 transition-transform duration-200">
            <span class="text-white font-bold text-xl">A</span>
          </div>
          <span class="text-xl font-bold text-white">Agnosphere</span>
        </a>
        <p class="text-gray-400 mb-6 max-w-sm">
          AI and Data Consulting for ambitious companies. We help you unlock the full potential of your data and AI initiatives.
        </p>
        <div class="flex space-x-4">
          {socialLinks.map((social) => (
            <a
              href={social.href}
              target="_blank"
              rel="noopener noreferrer"
              class="w-10 h-10 flex items-center justify-center rounded-lg bg-gray-800 hover:bg-blue-600 text-gray-400 hover:text-white transition-all duration-200 transform hover:scale-110"
              aria-label={social.name}
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d={social.icon} />
              </svg>
            </a>
          ))}
        </div>
      </div>

      <!-- Company Links -->
      <div>
        <h3 class="text-white font-semibold mb-4">Company</h3>
        <ul class="space-y-3">
          {footerLinks.company.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-gray-400 hover:text-white transition-colors duration-200 inline-flex items-center group"
              >
                <span class="transform group-hover:translate-x-1 transition-transform duration-200">
                  {link.label}
                </span>
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Services Links -->
      <div>
        <h3 class="text-white font-semibold mb-4">Services</h3>
        <ul class="space-y-3">
          {footerLinks.services.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-gray-400 hover:text-white transition-colors duration-200 inline-flex items-center group"
              >
                <span class="transform group-hover:translate-x-1 transition-transform duration-200">
                  {link.label}
                </span>
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Legal Links -->
      <div>
        <h3 class="text-white font-semibold mb-4">Legal</h3>
        <ul class="space-y-3">
          {footerLinks.legal.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-gray-400 hover:text-white transition-colors duration-200 inline-flex items-center group"
              >
                <span class="transform group-hover:translate-x-1 transition-transform duration-200">
                  {link.label}
                </span>
              </a>
            </li>
          ))}
        </ul>
        <div class="mt-6">
          <a
            href="/contact"
            class="inline-flex items-center text-sm font-medium text-blue-400 hover:text-blue-300 transition-colors duration-200"
          >
            Contact Us
            <svg class="ml-1 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
        </div>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="mt-12 pt-8 border-t border-gray-800">
      <div class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
        <p class="text-gray-400 text-sm">
          Â© {currentYear} Agnosphere. All rights reserved.
        </p>
        <p class="text-gray-500 text-sm">
          Built with precision and care.
        </p>
      </div>
    </div>
  </div>
</footer>

